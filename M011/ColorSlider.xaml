<UserControl x:Class="M011.ColorSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:M011"
			 Name="Self">
	<!--WICHTIG: In UserControls darf niemals DataContext verwendet werden-->
	<!--Alternative: Name + ElementName in den Bindings-->
	<DockPanel Margin="0, 0, 0, 5">
		<TextBlock Text="{Binding ElementName=Self, Path=Text}" Foreground="{Binding ElementName=Self, Path=TextColor}" Width="15" DockPanel.Dock="Left"/>
		<TextBox Text="{Binding ElementName=Slider, Path=Value}" TextAlignment="Center" Width="40" DockPanel.Dock="Right"/>
		<Slider Minimum="0" Maximum="255" Value="{Binding ElementName=Self, Path=SliderValue, Mode=TwoWay}" Name="Slider" Margin="2, 0" TickFrequency="1" IsSnapToTickEnabled="True"/>
	</DockPanel>
</UserControl>
