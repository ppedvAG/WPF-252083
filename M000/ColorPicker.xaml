<Window x:Class="M000.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M000"
        mc:Ignorable="d"
        Title="ColorPicker"
		Width="300"
		SizeToContent="Height"
		ResizeMode="NoResize"
		Topmost="True"
		WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
		<DockPanel Margin="0, 0, 0, 5">
			<TextBlock Text="R: "
					   Foreground="Red"
					   Width="15"
					   DockPanel.Dock="Left"/>
			<TextBox Text="{Binding ElementName=RSlider, Path=Value}"
					 TextAlignment="Center"
					 Width="40"
					 DockPanel.Dock="Right"/>
			<Slider Minimum="0"
					Maximum="255"
					Name="RSlider"
					Margin="2, 0"
					TickFrequency="1"
					IsSnapToTickEnabled="True"/>
		</DockPanel>
		<DockPanel Margin="0, 0, 0, 5">
			<TextBlock Text="G: "
					   Foreground="Green"
					   Width="15"
					   DockPanel.Dock="Left"/>
			<TextBox Text="{Binding ElementName=GSlider, Path=Value}"
					 TextAlignment="Center"
					 Width="40"
					 DockPanel.Dock="Right"/>
			<Slider Minimum="0"
					Maximum="255"
					Name="GSlider"
					Margin="2, 0"
					TickFrequency="1"
					IsSnapToTickEnabled="True"/>
		</DockPanel>
		<DockPanel Margin="0, 0, 0, 5">
			<TextBlock Text="B: "
					   Foreground="Blue"
					   Width="15"
					   DockPanel.Dock="Left"/>
			<TextBox Text="{Binding ElementName=BSlider, Path=Value}"
					 TextAlignment="Center"
					 Width="40"
					 DockPanel.Dock="Right"/>
			<Slider Minimum="0"
					Maximum="255"
					Name="BSlider"
					Margin="2, 0"
					TickFrequency="1"
					IsSnapToTickEnabled="True"/>
		</DockPanel>
		<DockPanel Margin="0, 0, 0, 5">
			<TextBlock Text="A: "
					   Foreground="Black"
					   Width="15"
					   DockPanel.Dock="Left"/>
			<TextBox Text="{Binding ElementName=ASlider, Path=Value}"
					 TextAlignment="Center"
					 Width="40"
					 DockPanel.Dock="Right"/>
			<Slider Minimum="0"
					Maximum="255"
					Value="255"
					Name="ASlider"
					Margin="2, 0"
					TickFrequency="1"
					IsSnapToTickEnabled="True"/>
		</DockPanel>

		<TextBlock Text="{Binding ElementName=ColorRect, Path=Fill, StringFormat='Picked Color: {0}'}" TextAlignment="Center"/>
		<Rectangle Name="ColorRect" Stroke="Black" StrokeThickness="2" Width="150" Height="150">
			<Rectangle.Fill>
				<MultiBinding>
					<MultiBinding.Bindings>
						<Binding ElementName="ASlider" Path="Value"/>
						<Binding ElementName="RSlider" Path="Value"/>
						<Binding ElementName="GSlider" Path="Value"/>
						<Binding ElementName="BSlider" Path="Value"/>
					</MultiBinding.Bindings>

					<MultiBinding.Converter>
						<local:FourValueToBrushConverter/>
					</MultiBinding.Converter>
				</MultiBinding>
			</Rectangle.Fill>
		</Rectangle>
	</StackPanel>
</Window>
