<Window x:Class="M014.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="clr-namespace:M014.ViewModel"
        xmlns:local="clr-namespace:M014"
        Title="MainWindow" Height="450" Width="800"
		Topmost="True" WindowStartupLocation="CenterScreen">
	<Window.DataContext>
		<vm:MainWindowViewModel/>
	</Window.DataContext>
    <StackPanel>
		<!--MVVM-->
		<!--Designpattern für WPF-Anwendungen-->
		<!--Trennt die Applikation strikt in Model, View, ViewModel-->
		
		<!--Implementation-->
		<!--1. Ordnerstruktur herstellen-->
		<!--2. Bestehende Views in ihre Ordner schieben-->
		<!--2.1. Namespaces anpassen (Backendklasse, View, App.xaml)-->
		<!--3. Eigene Klasse für Backendcode erstellen-->
		<!--3.1. Neue Klasse als DataContext verwenden-->
		<TextBlock Text="{Binding Zaehler}"/>
		<Button Command="{Binding ZaehlerCommand}"
				Content="Zähler++"/>
	</StackPanel>
</Window>
