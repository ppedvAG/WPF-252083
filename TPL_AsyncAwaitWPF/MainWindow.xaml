<Window x:Class="TPL_AsyncAwaitWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPL_AsyncAwaitWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300"
		WindowStartupLocation="CenterScreen">
    <StackPanel>
		<ProgressBar Height="20" IsIndeterminate="True"/>
		<TextBlock Name="Output"/>
		<Button Click="StartTasks" Content="Start Tasks"/>
		<Button Click="StartAsync" Content="Start AsyncAwait"/>
	</StackPanel>
</Window>
