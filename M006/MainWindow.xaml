<Window x:Class="M006.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:M006"
		xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        Title="MainWindow" Height="450" Width="800"
		Topmost="True"
		WindowStartupLocation="CenterScreen"
		DataContext="{Binding RelativeSource={RelativeSource Self}}">
	<Window.Resources>
		<sys:Double x:Key="DieZahl">40</sys:Double>
		<SolidColorBrush Color="Aqua" x:Key="DefaultBackground"/>
		<local:Person Vorname="Max" Nachname="Mustermann" x:Key="DiePerson"/>
		<Button Click="Button_Click" Content="Hallo Welt" x:Key="DerButton"/>

		<!--Globaler Style (ohne Key)-->
		<Style TargetType="Button">
			<Setter Property="Background" Value="Black"/>
			<Setter Property="Foreground" Value="Aqua"/>
		</Style>

		<!--Lokaler Style (mit Key): Muss per StaticResource eingebunden werden-->
		<Style TargetType="Button" x:Key="ButtonStyle">
			<Setter Property="Background" Value="Black"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontSize" Value="30"/>
		</Style>
	</Window.Resources>
	<StackPanel Margin="10">
		<!--Resources-->
		<!--C#-Objekte im Frontend ablegen-->
		<!--Die meisten Resourcen benötigen Key-->

		<!--Resourcen einbinden-->
		<!--StaticResource: Liest den Wert einmal aus-->
		<!--Wenn sich die Resource verändert, wird der Wert hier nicht aktualisiert-->
		<TextBlock Text="Hallo Welt" FontSize="{StaticResource DieZahl}"/>
		<Button Click="Button_Click_1" Content="Zahl++"/>

		<!--DynamicResource: Bindet den Wert dynamisch an-->
		<TextBlock Text="Hallo Welt" FontSize="{DynamicResource DieZahl}"/>
		
		<!--x:Static: Statischer Zugriff auf Variablen wie im Backend-->
		<DatePicker SelectedDate="{x:Static sys:DateTime.Now}"/>

		<TextBlock Text="{Binding Resources[DieZahl]}"/>

		<!--ResourceDictionaries-->
		<!--Externe Dateien, welche Resourcen enthalten-->
		<!--Können dann Applikationsweit verwendet werden-->
		<!--Müssen in App.xaml eingebunden werden-->
		<Button Content="Hallo Welt" FontSize="40"
				Background="{StaticResource DefaultButtonBackground}"
				Foreground="{StaticResource DefaultButtonForeground}"/>
		
		<!--Style-->
		<!--Sammlung von Settern, welche auf der entsprechenden GUI-Komponente angewandt werden-->
		<!--Können lokal (mit Key) oder global (ohne Key) angelegt werden-->
		<Button Content="Test">
			<Button.Style>
				<!--WICHTIG: TargetType nicht vergessen-->
				<Style TargetType="Button">
					<Setter Property="Background" Value="Black"/>
					<Setter Property="Foreground" Value="Aqua"/>
				</Style>
			</Button.Style>
		</Button>

		<!--Style aus Resources-->
		<Button Content="Test" Style="{StaticResource ButtonStyle}"/>
	</StackPanel>
</Window>
