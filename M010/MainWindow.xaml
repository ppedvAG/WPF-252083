<Window x:Class="M010.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M010"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
		<!--Trigger-->
		<!--Style mit Bedingung-->
		<!--"Event im Frontend"-->
		
		<!--Property Trigger-->
		<!--Reagiert auf Änderungen in der Komponente selbst-->
		<CheckBox Content="Hallo Welt">
			<CheckBox.Style>
				<!--Trigger müssen immer im Style definiert werden-->
				<Style TargetType="CheckBox">
					<Style.Triggers>
						<Trigger Property="IsChecked" Value="True">
							<Setter Property="FontSize" Value="30"/>
						</Trigger>
					</Style.Triggers>
				</Style>
			</CheckBox.Style>
		</CheckBox>
		
		<!--Data Trigger-->
		<!--Funktioniert wie Trigger, kann aber per Binding auf andere Komponente zugreifen-->
		<CheckBox Content="Button aktivieren" Name="BA"/>

		<Button Content="Hallo">
			<Button.Style>
				<Style TargetType="Button">
					<Setter Property="IsEnabled" Value="False"/>
					<Style.Triggers>
						<!--Eine Komponente die deaktiviert ist, deaktiviert auch ihre Trigger-->
						<!--IsEnabled darf nicht auf dem Button selbst sein, sondern muss auch im Style definiert werden-->
						<!--Gilt auch für Visibility-->
						<DataTrigger Binding="{Binding ElementName=BA, Path=IsChecked}" Value="True">
							<Setter Property="IsEnabled" Value="True"/>
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</Button.Style>
		</Button>
		
		<!--MultiDataTrigger-->
		<CheckBox Content="Button aktivieren" Name="BA1"/>
		<CheckBox Content="Button aktivieren" Name="BA2"/>
		<CheckBox Content="Button aktivieren" Name="BA3"/>

		<Button Content="Hallo">
			<Button.Style>
				<Style TargetType="Button">
					<Setter Property="IsEnabled" Value="False"/>
					<Style.Triggers>
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding ElementName=BA1, Path=IsChecked}" Value="True"/>
								<Condition Binding="{Binding ElementName=BA2, Path=IsChecked}" Value="True"/>
								<Condition Binding="{Binding ElementName=BA3, Path=IsChecked}" Value="True"/>
							</MultiDataTrigger.Conditions>
							<Setter Property="IsEnabled" Value="True"/>
						</MultiDataTrigger>
					</Style.Triggers>
				</Style>
			</Button.Style>
		</Button>

		<!--2-von-3-->
		<Button Content="Hallo">
			<Button.Style>
				<Style TargetType="Button">
					<Setter Property="IsEnabled" Value="False"/>
					<Style.Triggers>
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding ElementName=BA1, Path=IsChecked}" Value="True"/>
								<Condition Binding="{Binding ElementName=BA2, Path=IsChecked}" Value="True"/>
							</MultiDataTrigger.Conditions>
							<Setter Property="IsEnabled" Value="True"/>
						</MultiDataTrigger>
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding ElementName=BA1, Path=IsChecked}" Value="True"/>
								<Condition Binding="{Binding ElementName=BA3, Path=IsChecked}" Value="True"/>
							</MultiDataTrigger.Conditions>
							<Setter Property="IsEnabled" Value="True"/>
						</MultiDataTrigger>
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding ElementName=BA2, Path=IsChecked}" Value="True"/>
								<Condition Binding="{Binding ElementName=BA3, Path=IsChecked}" Value="True"/>
							</MultiDataTrigger.Conditions>
							<Setter Property="IsEnabled" Value="True"/>
						</MultiDataTrigger>
					</Style.Triggers>
				</Style>
			</Button.Style>
		</Button>
	</StackPanel>
</Window>
